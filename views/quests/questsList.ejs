<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>

    <main>
      <h1>DUNGEONS</h1>
      <ul id='questsList'>
        <% for (let i = 0; i < questsData.length; i++) { %>
          <li>
            <a href= <%= `/quests/${questsData[i].id}`%>
              <p><%= questsData[i].dungeon %> threat: <%= questsData[i].threat %> reward: <%= questsData[i].reward %> </p>
            </a>
          </li>
        <% } %>
      </ul>

      <% if (questgiver) { %>
        <a href=<%= '/quests/new/'%>>New Quest</a>
      <% } %>
    </main>

  <footer>
    <% include ../partials/footer %>
  </footer>

  <% include ../partials/scripts %>
  </body>
</html>
